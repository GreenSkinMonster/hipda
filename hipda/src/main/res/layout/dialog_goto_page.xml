<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <SeekBar
            android:id="@+id/sb_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:paddingBottom="8dp">

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/btn_fisrt_page"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_background"
            android:padding="12dp" />

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/btn_previous_page"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/btn_fisrt_page"
            android:background="@drawable/circle_background"
            android:padding="12dp" />

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/btn_next_page"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/btn_last_page"
            android:background="@drawable/circle_background"
            android:padding="12dp" />

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/btn_last_page"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_background"
            android:padding="12dp" />

    </RelativeLayout>

</LinearLayout>