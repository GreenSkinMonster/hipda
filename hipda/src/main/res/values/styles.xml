<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeLightBase" parent="MaterialDrawerTheme.Light">
    </style>

    <style name="ThemeDarkBase" parent="MaterialDrawerTheme">
    </style>

    <style name="ThemeLight" parent="ThemeLightBase">

        <item name="android:windowBackground">?list_item_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="actionBarPopupTheme">@style/MyToolbar.PopupTheme.Light</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarMargin">0dp</item>

        <item name="action_mode_text_color">@android:color/white</item>
        <item name="fab_background_tint">@color/md_grey_400</item>

        <!-- MaterialDrawer : change smaller drawer item's color -->
        <item name="material_drawer_secondary_text">?material_drawer_primary_text</item>
        <item name="material_drawer_selected_text">?colorAccent</item>
        <!-- Hamburger-Icon color -->
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>

        <!-- change searchView suggestion background color-->
        <item name="android:autoCompleteTextViewStyle">@style/MyAutoCompleteTextView</item>

        <item name="colorPrimary">@color/md_grey_700</item>
        <item name="colorPrimaryDark">@color/md_grey_800</item>
        <item name="colorAccent">@color/hipda</item>

        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryLight</item>
        <item name="panelMenuListTheme">@style/Theme.CompactMenu.Light</item>

        <item name="background">@color/day_background</item>
        <item name="list_item_background">#FFFFFF</item>
        <item name="list_item_divider">#F0F0F0</item>
        <item name="quote_background">@drawable/quote_background_light</item>
        <item name="emojiBackground">@color/md_grey_200</item>
        <item name="swipe_background">@color/white</item>
        <item name="swipe_color">@color/icon_blue</item>
        <item name="dialog_background">@color/md_grey_100</item>

        <!-- Matisse begin -->
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder
        </item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">
            @color/zhihu_item_checkCircle_backgroundColor
        </item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/zhihu_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">
            @color/zhihu_preview_bottom_toolbar_back_text
        </item>
        <item name="preview.bottomToolbar.apply.textColor">
            @color/zhihu_preview_bottom_toolbar_apply
        </item>
        <item name="listPopupWindowStyle">@style/Popup.Matisse.Light</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
        <!-- Matisse end -->
    </style>

    <style name="ThemeLight.Red" parent="ThemeLight">
        <item name="colorPrimary">@color/md_red_700</item>
        <item name="colorPrimaryDark">@color/md_red_800</item>
    </style>

    <style name="ThemeLight.Pink" parent="ThemeLight">
        <item name="colorPrimary">@color/md_pink_700</item>
        <item name="colorPrimaryDark">@color/md_pink_800</item>
    </style>

    <style name="ThemeLight.Purple" parent="ThemeLight">
        <item name="colorPrimary">@color/md_purple_700</item>
        <item name="colorPrimaryDark">@color/md_purple_800</item>
